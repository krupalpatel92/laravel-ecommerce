                                    "description": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "single",
                                            "variable"
                                        ]
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float"
                                    },
                                    "stock_quantity": {
                                        "type": "integer"
                                    },
                                    "alert_threshold": {
                                        "type": "integer"
                                    },
